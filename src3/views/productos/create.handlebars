<h2 id="nuevoProducto">Registrar nuevo Producto </h2>
<form method="post" id="formRegistrarProducto">
    <div class="input-group mb-3">
        <input type="text" name="nombre" class="form-control" placeholder="Nombre" aria-label="Username">
        <span class="input-group-text">@</span>
        <input type="number" name="precio" class="form-control" placeholder="Precio" aria-label="Server">
        <input type="number " name="cantidad" class="form-control" placeholder="Cantidad" aria-label="Username">
        <span class="input-group-text">@</span>
        <input type="text" name="imagen" class="form-control" placeholder="Imagen" aria-label="Server">
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-success">Registrar</button>
    </div>
</form>
<script src="/js/productos/registrarProducto.js"></script>